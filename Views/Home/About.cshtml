@{
    ViewData["Title"] = @Localizer["About"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using Microsoft.Extensions.Localization
@inject IOptions<RequestLocalizationOptions> LocOptions

@inject IViewLocalizer Localizer

@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@{
    var culture = Context.Features.Get<IRequestCultureFeature>
        ().RequestCulture.Culture.TwoLetterISOLanguageName;
}

@using Microsoft.AspNetCore.Routing.Constraints;
<!-- BREADCRUMBS -->
<section class="breadcrumbs_block breadcrumbs_block_about clearfix parallax">
    <div class="container center">
        <h2 style="text-shadow: 0 0 20px #000; text-align:left; margin-left: 120px;"><b>@Localizer["About"]</b></h2>
        <p style="color: #fff; text-align:left; margin-left: 120px;">@Localizer["Slogan"]</p>
    </div>
</section><!-- //BREADCRUMBS -->
<section class="team">
    <div class="container">
        <div class="row margbot30">
            <div class="col-md-10 col-md-offset-1">
                <div class="col-lg-12">
                    <h3 class="text-center" style="color: #652E84">@Localizer["Welcome"]</h3>
                    <hr style="margin-top:0;" />
                    <div class="row pt-md">
                        <div class="col-lg-6 col-md-6 col-sm-4 col-xs-12 profile">
                            <p style="">@Localizer["Text1"] @Localizer["Text2"] @Localizer["Text3"] @Localizer["Text4"]</p>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12 profile">
                            <img src="~/images/img12.jpg" class="img-responsive">
                            <h6 style="margin-top:15px;font-weight:500">Founder name  |  <span style="font-style:italic;font-weight:normal">founder</span></h6>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <h3 class="" style="text-align:left;margin: 10px 0 10px 0; color: #652E84;">@Localizer["Title1"]</h3>
                            <p>
                                @Localizer["Text5"]<br>
                                @Localizer["Text6"]<br>
                                @Localizer["Text7"]
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
