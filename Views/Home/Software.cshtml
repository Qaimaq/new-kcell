<!-- ABOUT -->
<section id="about">
    <!-- MULTI PURPOSE -->
    <div class="purpose_block">
        <!-- CONTAINER -->
        <div class="container">
            <!-- ROW -->
            <div class="row">
                <div class="row margbot50">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="col-lg-12 col-md-12 col-sm-12" data-appear-top-offset="-200" data-animated="fadeInLeft">
                            <h3 style="color: #652E84"><b>@Localizer["Our"]</b> @Localizer["office"]</h3>
                            <p class="desc-text">@Localizer["Our_office_text1"] @Localizer["Our_office_text2"]</p>

                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12" data-appear-top-offset="-200" data-animated="fadeInLeft">
                            <h3 style="color: #652E84"><b>@Localizer["Ours"]</b> @Localizer["advantages"]</h3>
                            <p class="desc-text">@Localizer["Ours_advantages_text1"] @Localizer["Ours_advantages_text2"]</p>

                        </div>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-6" data-appear-top-offset="-200" data-animated="fadeInDown">
                        <img class="img-responsive" src="~/images/people.jpg" alt="Alternate Text" />
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6" data-appear-top-offset="-200" data-animated="fadeInLeft">
                    <h3 style="color: #652E84"><b>@Localizer["Cloud"]</b> @Localizer["programs"]</h3>
                    <p class="desc-text">@Localizer["Cloud_programs_text1"] @Localizer["Cloud_programs_text2"]</p>

                </div>

                <div class="col-lg-6 col-md-6 col-sm-6" data-appear-top-offset="-200" data-animated="fadeInLeft">
                    <h3 style="color: #652E84"><b>@Localizer["Free"]</b> @Localizer["consultation"]</h3>
                    <p class="desc-text">@Localizer["Free_consultation_text1"] @Localizer["Free_consultation_text2"] @Localizer["Free_consultation_text3"]</p>

                </div>

            </div><!-- //ROW -->
        </div><!-- //CONTAINER -->
    </div><!-- //MULTI PURPOSE -->
</section><!-- //ABOUT -->
