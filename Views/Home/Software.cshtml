
@{
    ViewData["Title"] = @Localizer["Software"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@inject IHtmlLocalizer<SharedResource> SharedLocalizer
<!-- BREADCRUMBS -->
<section class="breadcrumbs_block breadcrumbs_block_software clearfix parallax">
    <div class="container center">
        <h2 class="marginleft85" style="text-align:left; margin-left: 120px;"><b>@Localizer["Software"]</b></h2>
        <p class="marginleft85" style="color: #fff; text-shadow: 0 0 20px #000; text-align:left; margin-left: 120px;">@Localizer["Slogan"]</p>
    </div>
</section><!-- //BREADCRUMBS -->

